<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="16dp"
    android:background="@drawable/genshinwp">

    <!-- CardView untuk kotak melengkung -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="#80D3D3D3"
        app:cardElevation="4dp"

        android:padding="16dp">

        <!-- LinearLayout dalam CardView untuk menampung Nama dan NIM -->
        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="456dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- TextView untuk menampilkan nama -->
            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="Nama: Ilham Eka Prawira"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- TextView untuk menampilkan NIM -->
            <TextView
                android:id="@+id/tvNim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/courier_prime"
                android:gravity="center"
                android:text="NIM: 215150600111015"
                android:textSize="18sp" />

            <!-- TextView untuk menampilkan pesan tambahan -->
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Smash?"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Layout horizontal untuk tombol Yay dan Nay -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Tombol "Yay" -->
                <Button
                    android:id="@+id/buttonYay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Yay" />

                <!-- Tombol "Nay" -->
                <Button
                    android:id="@+id/buttonNay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Nay" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
